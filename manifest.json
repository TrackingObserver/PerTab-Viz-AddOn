{
	"name": "TrackingObserver Add-On: TabInfo",
	"version": "0.1",
	"manifest_version": 2,
	
	"description": "Add-on to TrackingObserver that shows real-time tracking info on each tab.",
    
    "icons": {
		"16": "Icons/16.png",
		"48": "Icons/48.png",
		"128": "Icons/128.png"
	},
	
	"permissions": [
        "background"
	],
    
    "background": {
		"scripts": ["Background.js"],
		"persistent": true
	},
    
    "browser_action": {
        "default_icon": "Icons/16.png",
        "default_popup": "Popup.html",
        "default_title": "TrackingObserver: TabInfo"
    }
}
